<%= form_with(model: user, html: { class: 'form' }) do |form| %>
  <div class="py-4 px-6 rounded-t-lg">
    <h2 class="text-2xl font-bold ml-2">Edit user</h2>
  </div>
  <div class='field p-4'>
    <%= form.label :name, class: 'text-lg font-medium' %>
    <%= form.text_field :name, class: 'w-full mt-2' %>
  </div>
  <div class='field p-4'>
    <%= form.label :email, class: 'text-lg font-medium' %>
    <%= form.text_field :email, class: 'w-full mt-2' %>
  </div>
  <div class='field p-4'>
    <button type="submit" class='w-full px-4 py-2 font-bold text-white bg-blue-500 rounded-full hover:bg-blue-700 focus:outline-none focus:shadow-outline'>Save Changes</button>
  </div>
<% end %>
