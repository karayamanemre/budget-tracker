<%= form_with(model: user, html: { class: 'form card' }) do |form| %>
  <div class="card_header">
    <span class="material-symbols-outlined">
      edit_note
    </span>
    <h2 class="form_heading">Edit user</h2>
  </div>
  <div class='field'>
    <%= form.label :name %>
    <%= form.text_field :name, class:'input' %>
  </div>
  <div class='field'>
    <%= form.label :email %>
    <%= form.text_field :email, class:'input' %>
  </div>
  <div class='field'>
    <%= form.submit %>
  </div>
<% end %>