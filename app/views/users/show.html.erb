<nav class="bg-blue-600 p-4 shadow-lg">
  <div class="container mx-auto flex items-center justify-between">
    <% if user_signed_in? %>
      <%= link_to "Back", groups_path, class: "text-white text-2xl" %>
    <% end %>
    <h2 class="text-white text-2xl font-semibold">User Info</h2>
    <% if user_signed_in? %>
      <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete }, class: "text-white text-2xl" %>
    <% end %>
  </div>
</nav>
<section class="bg-gray-100 min-h-screen flex flex-col items-center justify-center pt-16">
  <div class="w-full max-w-md p-8 bg-white rounded-lg shadow-md flex flex-col items-center">
    <p class="text-center mb-6"><%= notice %></p>
    <%= render @user %>
    <div class="text-center mt-6">
      <strong>
        <%= link_to "Edit this user", edit_user_path(@user), class: "text-blue-500 hover:text-blue-700" %>
      </strong>
      <br><br>
      <%= form_tag user_path(@user), method: :delete do %>
        <%= hidden_field_tag :_method, :delete %>
        <%= button_tag "Delete this account", type: "submit", class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-full", data: { confirm: 'Are you sure?' } %>
      <% end %>
    </div>
  </div>
</section>
