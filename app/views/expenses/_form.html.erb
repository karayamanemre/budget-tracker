<div>
<%= form_with(model: expense, html: { class: 'form' }) do |form| %>
  <div class="py-4 px-6 rounded-t-lg">
    <h2 class="text-2xl font-bold ml-2">Add expense</h2>
  </div>

  <div class='field p-4'>
    <%= form.label :name, class: 'text-lg font-medium' %>
    <%= form.text_field :name, class:'w-full mt-2' %>
  </div>

  <div class='field p-4'>
    <%= form.label :amount, class: 'text-lg font-medium' %>
    <%= form.text_field :amount, class:'w-full mt-2' %>
  </div>

  <div class='field p-4'>
    <label class="text-lg font-medium">Select a category</label>
    <%= form.select :group_id, @group.all.collect {|u| [u.name.capitalize, u.id] }, class:'w-full mt-2' %>
  </div>

  <div class='field p-4'>
    <%= form.button "Add", class: 'w-full px-4 py-2 font-bold text-white bg-blue-500 rounded-full hover:bg-blue-700 focus:outline-none focus:shadow-outline' %>
  </div>
<% end %>
</div>
