<div>
<%= form_with(model: group, url: groups_path, html: { class: 'form card' }) do |form| %>
  <div class="card_header">
    <span class="material-symbols-outlined">
      add_box
    </span>
    <h2 class="form_heading">Add category</h2>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class:'input' %>
  </div>

  <div class="field">
    <%= form.label :icon %>
    <%= form.select :icon, Dir.glob('app/assets/images/icons/*').map { |f| [File.basename(f, '.*'), f] }, class:'input' %>
  </div>

  <div class="field">
    <%= form.submit %>
  </div>
  </div>
<% end %>