<%= form_with(model: group, url: groups_path, html: { class: 'w-full max-w-md p-8' }) do |form| %>
  <div class="text-center mb-6">
    <h2 class="text-2xl font-bold">Add category</h2>
  </div>

  <div class="mb-4">
    <%= form.label :name, class: 'block text-gray-700 text-sm font-bold mb-2' %>
    <%= form.text_field :name, class: 'w-full px-3 py-2 text-gray-700 border rounded-lg focus:outline-none focus:border-blue-500' %>
  </div>

  <div class="mb-6">
    <%= form.label :icon, class: 'block text-gray-700 text-sm font-bold mb-2' %>
    <%= form.select :icon, Dir.glob('app/assets/images/icons/*').map { |f| [File.basename(f, '.*'), f] }, class: 'w-full px-3 py-2 text-gray-700 border rounded-lg focus:outline-none focus:border-blue-500' %>
  </div>

  <div class="mb-4">
    <%= form.button "Add", type: "submit", class: 'w-full px-4 py-2 font-bold text-white bg-blue-500 rounded-full hover:bg-blue-700 focus:outline-none focus:shadow-outline' %>
  </div>
<% end %>